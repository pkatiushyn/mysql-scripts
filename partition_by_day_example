CREATE TABLE `t1` (
`id` int(11) unsigned NOT NULL AUTO_INCREMENT,
`utc_date` date NOT NULL,
...,
PRIMARY KEY (`id`, `utc_date`),
KEY `unix_time` (`unix_time`, `location_id`)
) ENGINE=InnoDB DEFAULT CHARSET=utf8 COLLATE=utf8_bin
PARTITION BY RANGE (DAY(`utc_date`))
(
PARTITION d00 VALUES LESS THAN (1),
PARTITION d01 VALUES LESS THAN (2),
PARTITION d02 VALUES LESS THAN (3),
PARTITION d03 VALUES LESS THAN (4),
PARTITION d04 VALUES LESS THAN (5),
PARTITION d05 VALUES LESS THAN (6),
PARTITION d06 VALUES LESS THAN (7),
PARTITION d07 VALUES LESS THAN (8),
PARTITION d08 VALUES LESS THAN (9),
PARTITION d09 VALUES LESS THAN (10),
PARTITION d10 VALUES LESS THAN (11),
PARTITION d11 VALUES LESS THAN (12),
PARTITION d12 VALUES LESS THAN (13),
PARTITION d13 VALUES LESS THAN (14),
PARTITION d14 VALUES LESS THAN (15),
PARTITION d15 VALUES LESS THAN (16),
PARTITION d16 VALUES LESS THAN (17),
PARTITION d17 VALUES LESS THAN (18),
PARTITION d18 VALUES LESS THAN (19),
PARTITION d19 VALUES LESS THAN (20),
PARTITION d20 VALUES LESS THAN (21),
PARTITION d21 VALUES LESS THAN (22),
PARTITION d22 VALUES LESS THAN (23),
PARTITION d23 VALUES LESS THAN (24),
PARTITION d24 VALUES LESS THAN (25),
PARTITION d25 VALUES LESS THAN (26),
PARTITION d26 VALUES LESS THAN (27),
PARTITION d27 VALUES LESS THAN (28),
PARTITION d28 VALUES LESS THAN (29),
PARTITION d29 VALUES LESS THAN (30),
PARTITION d30 VALUES LESS THAN (31),
PARTITION d31 VALUES LESS THAN (32),
PARTITION dmax VALUES LESS THAN MAXVALUE
);

